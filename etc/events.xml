    <event name="payment_method_assign_data_tns_hosted">
        <observer name="tns_hosted_gateway_data_assign" instance="OnTap\MasterCard\Observer\Hosted\DataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_tns_hpf">
        <observer name="tns_hpf_gateway_data_assign" instance="OnTap\MasterCard\Observer\Hpf\DataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_mpgs_ach">
        <observer name="mpgs_ach_gateway_data_assign" instance="OnTap\MasterCard\Observer\Ach\DataAssignObserver" />
    </event>
    <event name="admin_system_config_save">
        <observer name="mpgs_admin_config_save_after" instance="OnTap\MasterCard\Observer\ConfigSaveAfter"/>
    </event>
</config>
